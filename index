<body>

<h1>Poses tzai popse?</h1>
<div class="container">
    <input type="date" id="dateTo" onchange="calculateDays();"><br>
    <button onclick="calculateDays()">Pe mou na doume</button>
    <div class="result" id="result"></div>
</div>

<script>
    document.getElementById('dateTo').setAttribute('min', new Date().toISOString().split('T')[0]);

    function calculateDays() {
        var dateFrom = new Date();
        var dateToInput = document.getElementById('dateTo').value;

        if(!dateToInput) {
            document.getElementById('result').innerHTML = "E thkialekse mera gamo ton kapile sou";
            return;
        }

        var dateTo = new Date(dateToInput);

        // Reset time components for accurate calculation
        dateFrom.setHours(0, 0, 0, 0);
        dateTo.setHours(0, 0, 0, 0);

        var timeDiff = dateTo.getTime() - dateFrom.getTime();
        var daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));

        if(daysDiff < 0) {
            document.getElementById('result').innerHTML = "Eperasen";
        } else if(daysDiff === 0) {
            document.getElementById('result').innerHTML = "SIMERAAA!!";
        } else {
            document.getElementById('result').innerHTML = daysDiff + " tziai popse.";
        }
    }
</script>

</body>
